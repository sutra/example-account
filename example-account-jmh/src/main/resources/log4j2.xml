<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY" />
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
		<File name="file" fileName="target/example-account-jmh.log">
			<PatternLayout charset="UTF-8">
				<Pattern>%d %-6p [%t] %C{1.}.%M:%L %m%n</Pattern>
			</PatternLayout>
		</File>
		<Async name="async-console" bufferSize="4294967296">
			<AppenderRef ref="console" />
		</Async>
		<Async name="async-file" bufferSize="4294967296">
			<AppenderRef ref="file" />
		</Async>
	</Appenders>
	<Loggers>
		<Logger name="org.oxerr.example" level="ALL" additivity="false">
			<AppenderRef ref="async-console" />
			<AppenderRef ref="async-file" />
		</Logger>
		<Root level="WARN">
			<AppenderRef ref="async-console" />
			<AppenderRef ref="async-file" />
		</Root>
	</Loggers>
</Configuration>
